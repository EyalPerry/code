// .devcontainer/devcontainer.json
{
    "name": "data_eng",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "scala-lang.scala",
                "scalameta.metals",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "tamasfe.even-better-toml",
                "redhat.vscode-yaml",
                "adamviola.parquet-explorer"
            ]
        }
    },
    "remoteUser": "devuser"
}