//https://containers.dev/implementors/json_reference/
//https://containers.dev/features
{
    "name": "data_eng",
    "image": "data_eng",
    "forwardPorts": [
        // Jupyter
        8888
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "scala-lang.scala",
                "scalameta.metals",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "tamasfe.even-better-toml",
                "redhat.vscode-yaml"
            ]
        }
    },
    "mounts": [
        {
            "source": "notenooks",
            "target": "/app/notebooks",
            "type": "volume"
        },
        {
            "source": "local",
            "target": "/tmp",
            "type": "volume"
        }
    ]
}